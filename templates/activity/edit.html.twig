{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ 'Edit Activity'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Edit Activity'|trans }}</h1>
    <div class="ea-form">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            {% if form.vars.data and form.vars.data.image %}
                <div class="ea-form__image"><img src="{{ asset('files/activity/' ~ form.vars.data.image.filename) }}"></div>
            {% endif %}
            <button type="submit" class="btn btn-success btn-lg">{{ 'Save'|trans }}</button>
            <a href="{{ app.request.headers.get('referer') }}" class="btn btn-primary btn-lg">{{ 'Back'|trans }}</a>
        {{ form_end(form) }}
    </div>
{% endblock %}
