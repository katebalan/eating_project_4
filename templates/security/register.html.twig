{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Registration'|trans }}</h1>
    {#{% if error %}#}
        {#<div class="alert alert-danger">#}
            {#{{ error.messageKey|trans(error.messageData, 'security') }}#}
        {#</div>#}
    {#{% endif %}#}
    <div class="ea-form">
        <form action="{{ path('user_register') }}" method="post">
            {{ form_start(form) }}
            {{ form_row(form.email) }}
            <div>
            {{ form_label(form.plainPassword.first, 'Password') }}
            {{ form_widget(form.plainPassword.first) }}
            </div>
            <div>
            {{ form_label(form.plainPassword.second, 'Repeat Password') }}
            {{ form_widget(form.plainPassword.second) }}
            </div>
            {{ form_rest(form) }}
            <div class="ea-button__wrapper">
                <button type="submit" class="btn btn-success btn-lg">{{ 'Register'|trans }}</button>
            </div>
            {{ form_end(form) }}
            {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
             #}
        </form>
    </div>
    <div>
        <div class="text">Or you can try it: </div>
        <a href="{{ path('activity_list') }}" class="btn btn-primary btn-lg">{{ 'List of Activities'|trans }}</a>
        <a href="{{ path('product_list') }}" class="btn btn-primary btn-lg">{{ 'List of products'|trans }}</a>
    </div>
{% endblock %}
