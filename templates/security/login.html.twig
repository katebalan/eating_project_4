{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Login'|trans }}</h1>
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <div class="ea-form">
        <form action="{{ path('security_login') }}" method="post">
            {{ form_start(form) }}
                {{ form_row(form._username) }}
                {{ form_row(form._password) }}
                <button type="submit" class="btn btn-success btn-lg">{{ 'Login'|trans }}</button>
            {{ form_end(form) }}
            {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
             #}
        </form>
    </div>
    <div>
        <p class="ea-text ea-text--bold">{{ 'Or you can try it'|trans }}: </p>
        <a href="{{ path('user_register') }}" class="btn btn-primary btn-lg">{{ 'Registration'|trans }}</a>
        <a href="{{ path('activity_list') }}" class="btn btn-primary btn-lg">{{ 'List of Activities'|trans }}</a>
        <a href="{{ path('product_list') }}" class="btn btn-primary btn-lg">{{ 'List of products'|trans }}</a>
    </div>
{% endblock %}
